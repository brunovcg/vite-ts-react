{
  "name": "vida-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --open",
    "start": "vite --open",
    "build": "tsc -b && vite build",
    "build:analyze": "tsc && ANALYZE=true vite build && node cloc.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "register:styles": "node scripts/generate-css-register.js",
    "register:variables": "node scripts/generate-css-variables.js",
    "cloc": "node cloc.js",
    "todo:report": "node scripts/generate-todo-report.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "creator": "node creator/index.js",
    "lint:conventions": "node scripts/lint-conventions.js"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.20",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^24.10.10",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "cloc": "^2.6.0-cloc",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-checker": "^0.12.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "node scripts/lint-conventions.js"
    ],
    "*.css": [
      "prettier --write",
      "node scripts/lint-conventions.js"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ],
    "src/styles/design/*.css": [
      "npm run register:styles"
    ],
    "src/styles/config/variables.css": [
      "npm run register:variables"
    ]
  }
}
